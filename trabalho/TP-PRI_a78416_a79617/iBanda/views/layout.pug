doctype html
html
  head
    title iBanda
      if title
        | - #{title}
    link(rel='icon' href='/images/favicon.ico' type='image/icon')
    link(rel='stylesheet', href='/stylesheets/w3.css')
    script(src='/javascripts/jquery-3.3.1.min.js')
    script.
      var url="!{url}"
    block scripts
  body
    block content
      .w3-container
        .w3-card-4
          block header
            header.w3-container.w3-indigo
              center
                h1 iBanda
                  img(src="/images/music-eightnote-32-108529.png" alt="Logo" height="32")
          block topbar
            include topbar
          block body
            .w3-container
              p BODY
          br
          footer.w3-container.w3-indigo
            address iBanda