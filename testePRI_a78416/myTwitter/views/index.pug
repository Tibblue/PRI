extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-indigo
        h3 MyTwitter
      .w3-container
        form.w3-container(id="myTweetForm")
          fieldset
            legend Nova Entrada
            h4 Tweet
              textarea.w3-input.w3-border.w3-light-grey(id="texto" rows="3" cols="80")
            h4 Autor
              input.w3-input(id="autor" type="text" name="autor" placeholder="Inserir o Autor")
            h4 Hash
              input.w3-input(id="hash" type="text" name="hash" placeholder="Insera o HahsTag")
            button.w3-button.w3-round-large.w3-indigo(id="adicionar") Adicionar
        .w3-container
          fieldset
            legend Tweet
            ol(id="tweet")